<Window x:Class="Hywire.ImageProcessing.ImageDisplayer.CreateImageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hywire.ImageProcessing.ImageDisplayer"
        mc:Ignorable="d"
        Title="Create Image" Height="197.917" Width="229.167" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="label" Content="Pixel Width:" HorizontalAlignment="Left" Margin="34,31,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Pixel Height:" HorizontalAlignment="Left" Margin="34,57,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="widthBox" HorizontalAlignment="Left" Height="23" Margin="137,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="60"
                 Text="{Binding Path=PixelWidth}"/>
        <TextBox x:Name="heightBox" HorizontalAlignment="Left" Height="23" Margin="137,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="60"
                 Text="{Binding Path=PixelHeight}"/>
        <Button x:Name="saveBtn" Content="Save/Close" 
                HorizontalAlignment="Left" Margin="122,124,0,0" VerticalAlignment="Top" Width="75"
                Command="{Binding Path=SaveCloseCommand}"/>

    </Grid>
</Window>
